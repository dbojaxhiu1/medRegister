<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddEditPillActivity">

    <EditText
        android:id="@+id/edit_pill_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pill_name"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_pill_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/instruction"
        android:inputType="textMultiLine" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/daily_usage"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <NumberPicker
        android:id="@+id/number_picker_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numOfPillsInPackage"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <NumberPicker
        android:id="@+id/number_picker_number_in_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>